# PostgreSQL connection settings
POSTGRES_USER=         # Example: postgres
POSTGRES_PASSWORD=     # Example: your_secure_password
POSTGRES_PORT=         # Example: 5432
POSTGRES_HOST=         # Example: localhost or postgres (if using Docker)
POSTGRES_DB=           # Example: app

# API Configuration
# Secret key for JWT token generation and validation
# Should be a long, random string in production
TOKEN_SECRET_KEY=      # Example: your-secret-key-here
AUTH_DURATION_MINUTES= # Example: 60

# CORS Configuration
# The allowed origin for your frontend in production
# In development env, localhost:8080 is always allowed
ALLOWED_ORIGIN=        # Example: https://your-production-domain.com
